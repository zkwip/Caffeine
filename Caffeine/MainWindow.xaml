<Window x:Class="Caffeine.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Caffeine"
        mc:Ignorable="d"
        Title="Caffeine" Height="253" Width="213" ResizeMode="NoResize">
    <Grid Margin="0,0,0,0">
        <CheckBox x:Name="SilenceCheckbox" Content="Play silence" HorizontalAlignment="Left" Margin="26,89,0,0" VerticalAlignment="Top" IsChecked="True" Checked="SilenceCheckbox_Checked"/>
        <CheckBox x:Name="KeyCheckbox" Content="Press F15" HorizontalAlignment="Left" Margin="26,109,0,0" VerticalAlignment="Top" IsChecked="True" Checked="KeyCheckbox_Checked"/>
        <TextBlock HorizontalAlignment="Center" Margin="10,26,10,0" TextWrapping="Wrap" Text="Caffeine" VerticalAlignment="Top" FontSize="40" FontFamily="Consolas"/>
        <Button x:Name="HideButton" Content="Hide" HorizontalAlignment="Left" Margin="26,26,0,26" VerticalAlignment="Bottom" Width="65" Click="HideButton_Click"/>
        <Button x:Name="StopButton" Content="Stop" HorizontalAlignment="Right" Margin="0,26,26,26" VerticalAlignment="Bottom" Width="65" Click="StopButton_Click"/>
    </Grid>
</Window>
